config SAMPLE_SUPPORT_SPI_TRX_PERFORMANCE_TEST
    bool
    prompt "Support SPI TRX performance test."
    default n
    depends on SAMPLE_SUPPORT_SPI_TRX
    help
        This option means support SPI TRX performance test.

config SPI_TRX_TEST_TOTAL_LEN
    int
    prompt "Choose SPI TRX Total Len."
    depends on SAMPLE_SUPPORT_SPI_TRX_PERFORMANCE_TEST
    default 160

